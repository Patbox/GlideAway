{
  "schemaVersion": 1,
  "id": "glideaway",
  "version": "${version}",

  "name": "Glide Away!",
  "description": "Get your Hang Glider and glide away from the danger!",
  "authors": [
    "Patbox",
    "Used Sounds: https://github.com/Patbox/GlideAway/blob/master/sounds.txt"
  ],
  "contact": {
    "homepage": "https://pb4.eu",
    "sources": "https://github.com/Patbox/GlideAway"
  },

  "license": "LGPLv3",
  "icon": "assets/glideaway/textures/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "eu.pb4.glideaway.ModInit"
    ],
    "fabric-datagen": [
      "eu.pb4.glideaway.datagen.DataGenInit"
    ]
  },
  "mixins": [
    "glideaway.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.15.0",
    "fabric-api": "*",
    "minecraft": ">=1.21-",
    "polymer-core": ">=0.9.0-",
    "polymer-resource-pack": ">=0.9.0-",
    "polymer-virtual-entity": ">=0.9.0-",
    "java": ">=21"
  },
  "breaks": {
    "banner": "*",
    "cardboard": "*"
